<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/test"
    android:layout_height="match_parent"
    tools:context="emaildemo.com.akash.spinnerdemo.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!!!---Event Details---!!!"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Event Id:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtxtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Id"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtselct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Event Type:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Event Name:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtxtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Name"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Event Venue:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtxtVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Venue"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Event Capacity:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtxtCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Capacity"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Event Time:-"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TimePicker
        android:id="@+id/edtxtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Time"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <CalendarView
        android:id="@+id/calender"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </CalendarView>

    <Button
        android:id="@+id/butSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />


</LinearLayout>